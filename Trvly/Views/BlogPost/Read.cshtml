@model Trvly.Models.BlogPost

@{
    ViewBag.Title = "Read";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ActionLink("Back", "Index")
<div>
    <h4>BlogPost</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt></dt>

        <dd>
            <h2>
                @Html.DisplayFor(model => model.Title)
            </h2>
        </dd>

        <dt></dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>


    </dl>
</div>
<p>
            @Html.ActionLink("Approve", "Approve","BlogPost",new { id=Model.id},new { @class="btn btn-primary fa fa-check"})
