@model IEnumerable<Trvly.Models.Tour>

@{
    ViewBag.Title = "Upcoming Tours";
}



<div class="row">
@foreach (var item in Model)
{
     <div class="col-md-8" style="font-family: 'Raleway', sans-serif; height:10%; width:70%;border:groove 1px gray;padding:3%;margin-left:20%;margin-bottom:2%;
         border-radius:23px 23px 23px; box-shadow:1px 3px #888888;">
        <div class="card">

            <img class="card-img-top" src="~/Content/images/africa-animal-ape-38280.jpg" alt="Card image cap" style="height:250px; width:250px;margin-left:30%; ">
            <div class="card-body" >
                <h2 class="card-title" style="font-weight:bold;color:rosybrown; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">@Html.DisplayFor(modelItem => item.Title)</h2>
                
                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.Description)</p>
                <div> @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-primary" })</div>
            </div>
        </div>
    </div>

}
</div>
